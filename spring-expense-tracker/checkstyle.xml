<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
    Checkstyle Configuration
    Based on Google Java Style Guide with practical industry adjustments.
    https://google.github.io/styleguide/javaguide.html
-->
<module name="Checker">
    <!-- Charset -->
    <property name="charset" value="UTF-8"/>

    <!-- Severity: warning allows builds to pass, error fails the build -->
    <property name="severity" value="error"/>

    <!-- File extensions to check -->
    <property name="fileExtensions" value="java, properties, xml"/>

    <!-- Exclude generated files and test resources -->
    <module name="BeforeExecutionExclusionFileFilter">
        <property name="fileNamePattern" value="module\-info\.java$"/>
    </module>

    <!-- =============================================================== -->
    <!-- FILE-LEVEL CHECKS (run on the file, not the AST)                -->
    <!-- =============================================================== -->

    <!-- No tab characters in source files -->
    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>

    <!-- Files must end with a newline -->
    <module name="NewlineAtEndOfFile"/>

    <!-- Maximum file length -->
    <module name="FileLength">
        <property name="max" value="500"/>
        <property name="severity" value="warning"/>
    </module>

    <!-- No trailing whitespace -->
    <module name="RegexpSingleline">
        <property name="format" value="\s+$"/>
        <property name="minimum" value="0"/>
        <property name="maximum" value="0"/>
        <property name="message" value="Line has trailing whitespace."/>
    </module>

    <!-- Maximum line length: 120 characters (industry standard) -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <property name="ignorePattern" value="^package.*|^import.*|a href|href|http://|https://|ftp://"/>
    </module>

    <!-- =============================================================== -->
    <!-- TREEWALKER - AST-based checks                                   -->
    <!-- =============================================================== -->
    <module name="TreeWalker">

        <!-- =========================================================== -->
        <!-- NAMING CONVENTIONS                                          -->
        <!-- =========================================================== -->

        <!-- Package names: all lowercase, no underscores -->
        <module name="PackageName">
            <property name="format" value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
            <message key="name.invalidPattern"
                     value="Package name ''{0}'' must be lowercase with no underscores."/>
        </module>

        <!-- Type names: UpperCamelCase -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern"
                     value="Type name ''{0}'' must be UpperCamelCase."/>
        </module>

        <!-- Method names: lowerCamelCase (underscores allowed in test methods) -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*(_[a-zA-Z0-9]+)*$"/>
            <message key="name.invalidPattern"
                     value="Method name ''{0}'' must be lowerCamelCase (underscores allowed for test methods)."/>
        </module>

        <!-- Member variables: lowerCamelCase -->
        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern"
                     value="Member name ''{0}'' must be lowerCamelCase."/>
        </module>

        <!-- Parameter names: lowerCamelCase -->
        <module name="ParameterName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern"
                     value="Parameter name ''{0}'' must be lowerCamelCase."/>
        </module>

        <!-- Local variables: lowerCamelCase -->
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern"
                     value="Local variable ''{0}'' must be lowerCamelCase."/>
        </module>

        <!-- Constants: UPPER_SNAKE_CASE -->
        <module name="ConstantName">
            <property name="format" value="^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$"/>
            <message key="name.invalidPattern"
                     value="Constant ''{0}'' must be UPPER_SNAKE_CASE."/>
        </module>

        <!-- =========================================================== -->
        <!-- IMPORTS                                                     -->
        <!-- =========================================================== -->

        <!-- No star imports (except static imports for testing frameworks) -->
        <module name="AvoidStarImport">
            <property name="allowStaticMemberImports" value="true"/>
        </module>

        <!-- No redundant imports -->
        <module name="RedundantImport"/>

        <!-- No unused imports -->
        <module name="UnusedImports"/>

        <!-- Illegal imports (e.g., sun.* packages) -->
        <module name="IllegalImport">
            <property name="illegalPkgs" value="sun"/>
        </module>

        <!-- =========================================================== -->
        <!-- SIZE / LENGTH LIMITS                                        -->
        <!-- =========================================================== -->

        <!-- Maximum method length -->
        <module name="MethodLength">
            <property name="max" value="50"/>
            <property name="severity" value="warning"/>
        </module>

        <!-- Maximum parameters per method -->
        <module name="ParameterNumber">
            <property name="max" value="7"/>
            <property name="severity" value="warning"/>
        </module>

        <!-- =========================================================== -->
        <!-- WHITESPACE                                                  -->
        <!-- =========================================================== -->

        <!-- Whitespace around generic tokens < > -->
        <module name="GenericWhitespace">
            <message key="ws.followed"
                     value="GenericWhitespace ''{0}'' is followed by whitespace."/>
            <message key="ws.preceded"
                     value="GenericWhitespace ''{0}'' is preceded with whitespace."/>
            <message key="ws.illegalFollow"
                     value="GenericWhitespace ''{0}'' should be followed by whitespace."/>
            <message key="ws.notPreceded"
                     value="GenericWhitespace ''{0}'' is not preceded with whitespace."/>
        </module>

        <!-- No whitespace after certain tokens -->
        <module name="NoWhitespaceAfter">
            <property name="tokens"
                      value="AT, INC, DEC, UNARY_MINUS, UNARY_PLUS, BNOT, LNOT, DOT, ARRAY_DECLARATOR, INDEX_OP"/>
        </module>

        <!-- No whitespace before certain tokens -->
        <module name="NoWhitespaceBefore">
            <property name="tokens" value="COMMA, SEMI, POST_INC, POST_DEC, ELLIPSIS"/>
        </module>

        <!-- Whitespace after certain tokens -->
        <module name="WhitespaceAfter">
            <property name="tokens"
                      value="COMMA, SEMI, TYPECAST, LITERAL_IF, LITERAL_ELSE, LITERAL_WHILE, LITERAL_DO, LITERAL_FOR, DO_WHILE"/>
        </module>

        <!-- Whitespace around operators -->
        <module name="WhitespaceAround">
            <property name="allowEmptyConstructors" value="true"/>
            <property name="allowEmptyMethods" value="true"/>
            <property name="allowEmptyTypes" value="true"/>
            <property name="allowEmptyLoops" value="true"/>
            <property name="allowEmptyLambdas" value="true"/>
            <property name="allowEmptyCatches" value="true"/>
            <message key="ws.notFollowed"
                     value="WhitespaceAround: ''{0}'' is not followed by whitespace."/>
            <message key="ws.notPreceded"
                     value="WhitespaceAround: ''{0}'' is not preceded with whitespace."/>
        </module>

        <!-- Empty line separator between class members -->
        <module name="EmptyLineSeparator">
            <property name="allowNoEmptyLineBetweenFields" value="true"/>
            <property name="allowMultipleEmptyLines" value="false"/>
            <property name="allowMultipleEmptyLinesInsideClassMembers" value="false"/>
        </module>

        <!-- =========================================================== -->
        <!-- BRACES                                                      -->
        <!-- =========================================================== -->

        <!-- Braces required for all blocks (if, else, for, while, do) -->
        <module name="NeedBraces"/>

        <!-- Left brace on same line (K&R style) -->
        <module name="LeftCurly"/>

        <!-- Right brace placement -->
        <module name="RightCurly">
            <property name="option" value="same"/>
            <property name="tokens"
                      value="LITERAL_TRY, LITERAL_CATCH, LITERAL_FINALLY, LITERAL_IF, LITERAL_ELSE, LITERAL_DO"/>
        </module>

        <!-- =========================================================== -->
        <!-- CODING PRACTICES                                            -->
        <!-- =========================================================== -->

        <!-- Avoid empty statements (stray semicolons) -->
        <module name="EmptyStatement"/>

        <!-- equals() must check for null -->
        <module name="EqualsAvoidNull"/>

        <!-- Override equals() must also override hashCode() -->
        <module name="EqualsHashCode"/>

        <!-- No assignments in subexpressions (e.g., if (a = b)) -->
        <module name="InnerAssignment"/>

        <!-- Use Java-style array declarations: String[] args, not String args[] -->
        <module name="ArrayTypeStyle"/>

        <!-- switch must have default clause -->
        <module name="MissingSwitchDefault"/>

        <!-- No fall-through in switch without comment -->
        <module name="FallThrough"/>

        <!-- long literals must use uppercase L (not lowercase l) -->
        <module name="UpperEll"/>

        <!-- Modifiers in standard order: public protected private abstract static final transient volatile synchronized native strictfp -->
        <module name="ModifierOrder"/>

        <!-- No redundant modifiers (e.g., public on interface methods) -->
        <module name="RedundantModifier"/>

        <!-- String literal equality: use equals(), not == -->
        <module name="StringLiteralEquality"/>

        <!-- Nested try depth limit -->
        <module name="NestedTryDepth">
            <property name="max" value="2"/>
        </module>

        <!-- =========================================================== -->
        <!-- CLASS DESIGN                                                -->
        <!-- =========================================================== -->

        <!-- One top-level class per file -->
        <module name="OneTopLevelClass"/>

        <!-- Utility classes should have private constructor -->
        <module name="HideUtilityClassConstructor"/>

        <!-- Interfaces should declare types or be functional interfaces -->
        <module name="InterfaceIsType"/>

        <!-- =========================================================== -->
        <!-- JAVADOC (optional - set to warning)                         -->
        <!-- =========================================================== -->

        <!-- Javadoc for public methods (warning only) -->
        <!--        <module name="MissingJavadocMethod">-->
        <!--            <property name="scope" value="public"/>-->
        <!--            <property name="allowMissingPropertyJavadoc" value="true"/>-->
        <!--            <property name="allowedAnnotations" value="Override, Test, BeforeEach, AfterEach, BeforeAll, AfterAll"/>-->
        <!--            <property name="severity" value="warning"/>-->
        <!--        </module>-->

        <!-- =========================================================== -->
        <!-- MISCELLANEOUS                                               -->
        <!-- =========================================================== -->

        <!-- Indentation: 4 spaces -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="braceAdjustment" value="0"/>
            <property name="caseIndent" value="4"/>
            <property name="throwsIndent" value="8"/>
            <property name="lineWrappingIndentation" value="8"/>
            <property name="arrayInitIndent" value="4"/>
        </module>

        <!-- Comments must be at same indentation as surrounding code -->
        <module name="CommentsIndentation"/>

        <!-- Suppress warnings annotation -->
        <module name="SuppressWarningsHolder"/>

    </module>

    <!-- Allow @SuppressWarnings to suppress checkstyle warnings -->
    <module name="SuppressWarningsFilter"/>

</module>
